pipeline {
    agent any

    stages {
        stage('Cloner le repo') {
            steps {
                git 'https://github.com/username/mon-projet-python.git'
            }
        }

        stage('Créer un environnement virtuel') {
            steps {
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate'
            }
        }

        stage('Installer les dépendances') {
            steps {
                sh './venv/bin/pip install --upgrade pip'
                sh './venv/bin/pip install -r requirements.txt'
            }
        }

        stage('Lancer les tests') {
            steps {
                sh './venv/bin/pytest'
            }
        }

        stage('Déploiement') {
            steps {
                // Exemple de déploiement sur un serveur via SSH
                sh 'scp -r * user@serveur:/chemin/projet/'
                sh 'ssh user@serveur "cd /chemin/projet && ./venv/bin/python app.py &"'
            }
        }
    }
}
